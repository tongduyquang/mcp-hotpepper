  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "bin": {
    "mcp-hotpepper": "./build/index.js"
  },
  "files": [
    "build"
  ],
    "repository": {
